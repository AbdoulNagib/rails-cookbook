<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @category.photo.key %>);">
  <div>
    <h1><%= @category.name %></h1>
  </div>
</div>

<div class = "cards">
  <% @category.bookmarks.each do |bookmark|  %>
    <div class= "card-recipe">


    <%= link_to bookmark_path(bookmark),
      data: { turbo_method: :delete,
              turbo_confirm: "Are you sure?"}, class: 'btn-delete' do %>

              <i class="fa-solid fa-trash"></i>

              <% end %>
      <img src="<%= bookmark.recipe.image_link %>" alt="recipe image">

          <div class="card-description">
            <%= link_to bookmark.recipe.name, category_bookmark_path(category_id: @category, bookmark_id: bookmark ) %>
            <p><%= bookmark.recipe.description.truncate(180) %></p>
          </div>

          <div class="card-recipe-info">

            <div class="comment">
              <i class="fa-solid fa-quote-left me-2"></i><p><em><%= bookmark.comment %></em></p>
            </div>

            <div>
              <p><%= bookmark.recipe.rating %></p>
            </div>
          </div>

    </div>

  <% end %>
</div>

<div class="links">
  <%= link_to "Create a bookmark", new_category_bookmark_path(@category)%>
</div>
